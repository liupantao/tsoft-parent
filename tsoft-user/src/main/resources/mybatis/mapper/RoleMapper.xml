<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tsoft.user.security.mapper.RoleMapper">
    <select id="findAll" resultType="com.tsoft.user.security.entity.Role">
        select * from sys_role
    </select>
    <select id="findById" resultType="com.tsoft.user.security.entity.Role">
        select * from tb_user where id = #{id}
    </select>
</mapper>